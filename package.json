{
	"name": "typeread",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev:ts": "vite",
		"dev:go": "cd backend && air",
		"dev": "concurrently -n \"ts,go,↱↲\" -c blue,cyan,yellow \"bun dev:ts\" \"bun dev:go\" \"bun sync:watch\"",
		"build": "tsc -b && vite build",
		"lint": "eslint .",
		"preview": "vite preview",
		"sync": "bun run openapi-typescript http://localhost:8888/openapi.json -o ./src/api/schema.d.ts",
		"sync:watch": "onchange \"backend/api/api.go\" -- bun sync",
		"postinstall": "bun ./scripts/postinstall.ts"
	},
	"dependencies": {
		"@mantine/hooks": "^7.17.2",
		"@tailwindcss/vite": "^4.0.14",
		"@tanstack/query-sync-storage-persister": "^5.68.0",
		"@tanstack/react-query": "^5.68.0",
		"@tanstack/react-query-devtools": "^5.68.0",
		"@tanstack/react-query-persist-client": "^5.68.0",
		"clsx": "^2.1.1",
		"epubjs": "^0.3.93",
		"jotai": "^2.12.2",
		"motion": "^12.5.0",
		"openapi-fetch": "^0.13.5",
		"openapi-react-query": "^0.3.1",
		"path": "^0.12.7",
		"react": "^19.0.0",
		"react-device-detect": "^2.2.3",
		"react-dom": "^19.0.0",
		"react-scan": "^0.2.14",
		"tailwind-merge": "^3.0.2",
		"tailwindcss": "^4.0.14"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@iconify/react": "^5.2.0",
		"@total-typescript/ts-reset": "^0.6.1",
		"@types/bun": "^1.2.5",
		"@types/react": "^19.0.10",
		"@types/react-dom": "^19.0.4",
		"@vitejs/plugin-react": "^4.3.4",
		"concurrently": "^9.1.2",
		"globals": "^16.0.0",
		"onchange": "^7.1.0",
		"openapi-typescript": "^7.6.1",
		"typescript": "~5.8.2",
		"vite": "^6.2.2"
	},
	"trustedDependencies": ["@biomejs/biome"]
}
